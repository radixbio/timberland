job "yugabyte-kafka-connector" {
  all_at_once = false
  datacenters = ["dc1"]

  group "connector" {
    count = 1

    task "yugabyte-kafka-connector" {

      config {
        image = "appropriate/curl"
        auth_soft_fail = false
        command = "/local/start.sh"
        hostname = "$${attr.unique.hostname}-yb-kafka-connect"
        privileged = false
        network_mode = "weave"
        cap_add = []
      }

      driver = "docker"
      kill_timeout = "5s"
      kill_signal = "SIGINT"
      leader = false

      resources {
        memory = 100

        network {
          mbits = 10
        }
      }

      shutdown_delay = "0s"

      template {
        change_mode = "noop"
        destination = "local/start.sh"
        env = false
        left_delimiter = "{{"
        perms = "755"
        right_delimiter = "}}"
        source = "/opt/radix/timberland/nomad/connect/yugabyte_sink.sh"
        splay = "5s"
        vault_grace = "15s"
      }
    }
  }

  namespace = "default"
  priority = 50
  region = "global"
  type = "batch"
}
